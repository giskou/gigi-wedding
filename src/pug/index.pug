        // Masthead
        header.masthead
            .container.position-relative
                .row.justify-content-center
                    .col-xl-6
                        .text-center.text-white
                            // Page heading
                            h1.display-1.caligraphy Save The Date.
                            h3.display-4 We are doing it ... again!
                            p More information comming soon.

        // Icons Grid
        section.features-icons.bg-light.text-center
            .container
                .row
                    .col
                        .features-icons-item.mx-auto.mb-5.mb-lg-0.mb-lg-3
                            .features-icons-icon.d-flex
                                i.bi-calendar-event.m-auto.text-primary
                            h1 When?
                            h3 13 July 2024
                    .col
                        .features-icons-item.mx-auto.mb-5.mb-lg-0.mb-lg-3
                            .features-icons-icon.d-flex
                                i.bi-pin-map.m-auto.text-primary
                            h1 Where?
                            h3 Volos, Greece

        // Footer
        footer.footer.bg-light
            .container
                .row
                    .col-lg-6.h-100.text-center.text-lg-start.my-auto
                        p.text-muted.small.mb-4.mb-lg-0 &copy; giskou 2023. All Rights Reserved.

